{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2017", "dom"],
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@types",
    "node_modules/@types/hammerjs/index.d.ts"
  ],
  "exclude": [".git", "node_modules"]
}
